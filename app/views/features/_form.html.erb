<%= form_for(@feature) do |f| %>
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
      <% @feature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.select :name,@feature_name  %>
  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%#= f.select :type, FeatureType.all.collect{|p|[p.name,p.id]},{:prompt => 'Please select types ...'} %>
    <%=
        @feature_types=FeatureType.order(:id).all
        f.collection_select(:type,@feature_types,:id,:name,:prompt=>'Please select types ...')
    %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description ,:rows=> 6 %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%#= f.select :author,Author.all.collect{|p|[p.name,p.id]},{:prompt => 'Please select author ...'} %>
    <%=
        @authors=Author.order(:id).all
        f.collection_select(:author,@authors,:id,:name,:prompt=>'Please select an author ...')
    %>
  </div>
  <div class="field">
    <%= f.label :remark %><br />
    <%= f.text_area :remark ,:rows=>5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
